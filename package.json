{
  "name": "ecotrak",
  "version": "1.0.0",
  "description": "Sistema de gesti√≥n de reciclaje",
  "main": "src/main/main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir"
  },
  "keywords": [
    "reciclaje",
    "excel",
    "electron",
    "desktop"
  ],
  "author": "Jafet sanchez",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "xlsx": "^0.18.5",
    "bootstrap": "^5.3.0",
    "@fortawesome/fontawesome-free": "^6.5.0"
  },
  "build": {
    "appId": "com.ecotrak.reciclaje",
    "productName": "EcoTrak app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon2.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "EcoTrak"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icons/icon3.ico"
    }
  }
}